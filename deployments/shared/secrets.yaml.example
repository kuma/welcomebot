# Example secrets file - DO NOT commit actual secrets!
# Copy this to secrets.yaml and fill in actual values
# Add secrets.yaml to .gitignore

apiVersion: v1
kind: Secret
metadata:
  name: welcomebot-secrets
  namespace: welcomebot
type: Opaque
stringData:
  # Discord Bot Token
  DISCORD_BOT_TOKEN: "YOUR_DISCORD_BOT_TOKEN_HERE"
  
  # PostgreSQL Credentials
  POSTGRES_USER: "welcomebot"
  POSTGRES_PASSWORD: "YOUR_POSTGRES_PASSWORD_HERE"
  POSTGRES_DB: "welcomebot"
  
  # Redis Password (optional, leave empty for no password)
  REDIS_PASSWORD: ""

